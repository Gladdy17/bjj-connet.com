
	<div class="card mt-4 mb-4">
			<div class="card-body">
				<h3 class="text-center mb-3">Connect with BJJ Athlete's All Over the World!!</h3>
				<%= search_form_for @q, url: root_path do |form| %>
					<div class="input-group mb-3">
						<%= form.search_field :city_or_country_cont, class: "form_control", placeholder: "Find by City or Country", area: { label: "Find by City or Country", describedby: "button-addon2"}%>
						<%= form.submit "Search", class: "btn btn-primary", id: "button-addon2"%>	
					</div>
				<%end%>
			</div>
		</div>
	</div>

	<div class="col-lg-10 mx-auto mt-5" > 
		<div class="row mt-4 mb-4">
			<% @users.each do |users| %>
				<div class="col-lg-3 mb-3 mt-3">
					<div class="card text-center" style="min-height: 64px;">
						<div class="card-body">
							<%= image_tag "dmu4.jpg" , style: "width: 150px; border-radius: 50%; border: 2px solid #0d6efd", class: 'mb-3' %>
						</div>
                            <div class="user-info">
                                <h5>Name | <%= users.name %></h5>
                                <h5>Belt | <%= users.profile_title%></h5>
                                <h5>UserName | <%= users.username%></h5>
                                <h5>DOB | <%= users.date_of_birth%></h5>
                                <h5> Country | <%= users.country%></h5>
								<h5> City | <%= users.city%></h5>
                                <h5><%= link_to "View Profile" , " ", class: "btn btn-primary" %>
                            </div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
